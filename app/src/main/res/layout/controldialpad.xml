<LinearLayout android:paddingTop="20dp"
    android:paddingLeft="5dp"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="0.44"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/txt_number"
        android:paddingLeft="40dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txt_call_situation"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"/>

    <com.skyfishjy.library.RippleBackground
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/content"
        app:rb_color="#0099CC"
        app:rb_radius="20dp"
        app:rb_rippleAmount="3"
        app:rb_duration="2000"
        app:rb_scale="3">
        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_centerInParent="true"
            android:id="@+id/centerImage"
            android:src="@drawable/phone_call"/>

    </com.skyfishjy.library.RippleBackground>
    <TextView
        android:id="@+id/txt_call_timer"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"/>

    <android.support.design.card.MaterialCardView
        android:id="@+id/card_view_controllers"
        android:layout_width="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="4dp"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="@color/cards_dialogs">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageButton
                android:id="@+id/ib_up_volume"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                style="?android:attr/borderlessButtonStyle"
                android:src="@drawable/up_volume_bt"/>
            <ImageButton
                android:id="@+id/ib_down_volume"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                style="?android:attr/borderlessButtonStyle"
                android:src="@drawable/down_volume_bt"/>
            <ImageButton
                android:id="@+id/ib_mute"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                style="?android:attr/borderlessButtonStyle"
                android:src="@drawable/mute_off"/>

            <ImageButton
                android:id="@+id/ib_bluetooth_connection_call"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                style="?android:attr/borderlessButtonStyle"
                android:src="@drawable/bluetooth_connection_true"
                />

        </LinearLayout>

    </android.support.design.card.MaterialCardView>




</LinearLayout>