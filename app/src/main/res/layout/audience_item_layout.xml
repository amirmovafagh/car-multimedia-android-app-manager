<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/rl_audience"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <ImageButton
        android:id="@+id/ib_audience_image"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_known_person_black_32dp"

        />

    <TextView
        android:id="@+id/tv_audience_firstname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:layout_alignBottom="@+id/ib_audience_image"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/ib_audience_image"
        android:textColor="@color/color_text"
        android:textSize="25dp"
        tools:text="first"
        />

    <TextView
        android:id="@+id/tv_audience_lastname"
        android:padding="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_audience_firstname"
        android:layout_alignTop="@+id/tv_audience_firstname"
        android:layout_toStartOf="@+id/tv_audience_firstname"
        android:textColor="@color/color_text"
        android:textSize="25dp"
        tools:text="last"
        />


</RelativeLayout>
